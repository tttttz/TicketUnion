<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/goods_cover"
        android:layout_width="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_height="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/goods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:text="石墨烯加热眼罩热敷usb充电发热睡觉遮光睡眠男女护眼缓解眼疲劳热眼罩热敷usb充…" />

        <TextView
            android:id="@+id/goods_off_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省15元"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/shape_tag_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="券后价:"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.80"
                android:id="@+id/goods_after_off_price"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥23"
                android:textSize="12sp"
                android:id="@+id/goods_original_price"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorGrey"/>

            <TextView
                android:id="@+id/goods_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1000人已购买"
                android:textColor="@color/colorGrey"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>